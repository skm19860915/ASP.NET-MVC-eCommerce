        function addSize() {
            var selectedItem = $("#AddSizeValue").val();
            var subCategoryTypeId = $("#subCategoryTypeId").val();
            var sizeGroupId = $("#sizeGroupId").val();
            var updateHolder = $("#sizeList");
            $.ajax({
                type: "POST",
                url: "@(Url.Action("AddSize", "Size"))",
