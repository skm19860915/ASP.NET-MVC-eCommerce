    $(function getSizes() {
        $("#sizeGroupId").change(function () {
            var selectedItem = $(this).val();
            var updateHolder = $("#sizeList");
            $("#addSizeDiv").html('');
            $("#addSizeDivHead").html('');
            if (selectedItem == 0) {
