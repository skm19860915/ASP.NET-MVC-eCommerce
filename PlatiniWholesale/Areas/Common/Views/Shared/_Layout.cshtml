                            }
                            if ($("#addSizeDiv").length) {
                                updateHolder.html(table);
                            }
                        });
                    },
                    error: function () { }
                });
            },
            error: function () { }
        });
    }

    function addField() {
        $("#addField").html('');
        $("#addField").append($('<tr><th>Size</th><th><input type="text" id="AddSizeValue" /></th><th><button id="addButton" onclick="addSize()">Add</button></th></tr>'));
