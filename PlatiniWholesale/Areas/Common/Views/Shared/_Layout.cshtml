                var updateHolder = $("#sizeGroupId");

                $.ajax({
                    type: "GET",
                    url: "@(Url.Action("GetSizeGroupBySubCategoryTypeId", "Size"))",
                        data: { "subCategoryTypeId": selectedItem },
                        success: function (data) {
                            $("#sizeList").html('');
                            addField();
