                type: "GET",
                url: "@(Url.Action("GetSizesBySizeGroupId", "Size"))",
                data: { "sizeGroupId": selectedItem },
                success: function (result) {
                    updateHolder.html('');
                    addField();
                    var table = updateHolder.append($('<tr><th>Sizes</th><th></th><th></th></tr>'));
