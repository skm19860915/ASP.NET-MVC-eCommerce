@using Platini.Models
@model OrderHeader
@if (!ViewBag.isCustomer)
{
    bool showBtn = !ViewBag.isCustomer;
    <div>
        <div class="col-lg-5 col-md-5 col-sm-5">
            <div class="filter-block">
                <div class="formblock">
                    <div class="block">
                        <div class="formrow">
                            Search
                        </div>
                        <div class="formrow">
                            <div class="feild">
                                @Html.TextBox("searchText", Model.Search, new { @class = "searchText", @title = "Search by Order #, Customer  name, Company name, Phone #, Product", @placeholder = "search" })



                                <input type="submit" value="GO" style="background-color: #424240; border-radius: 4px; color: white; height: 24px; margin-left: 5px; margin-top: -3px;" />
                                @*<input type="button" value="Filters" class="filtertab" style="background-color: #424240; border-radius: 4px; color: white; height: 24px; margin-left: 5px; margin-top: -3px;" />*@
                                <input type="button" value="Clear" onclick="clearSearch();" style="background-color: #424240; border-radius: 4px; color: white; height: 24px; margin-left: 5px; margin-top: -3px;" />


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-7 col-md-7 col-sm-7">
            <div id="filterblock" class="filter-block">
                <div class="formblock">
                    <div class="block">
                        <div class="btnhide">
                            @if (!ViewBag.isSalesPerson)
                            {
                                <div class="formrow">
                                    Filter By Sales person
                                </div>
                                <div class="formrow">
                                    <div class="feild">

                                        @Html.DropDownList("selectedSalesPerson", new SelectList(Model.SalesPersons, "Id", "Value", Model.SalesMan), "---All Salesmen---", new { @style = "width:150px;" })
                                    </div>
                                </div>


                            }
                            @if (!ViewBag.isSalesPerson)
                            {
                                <div class="formrow">
                                    Filter By Tag
                                </div>
                                <div class="formrow">
                                    <div class="feild">

                                        @Html.DropDownList("TagId", new SelectList(Model.Tags, "Id", "Value", Model.Tag), "---All Tags---", new { @style = "width:150px;" })
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                Filter <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                @if (!ViewBag.isSalesPerson)
                                {
                                    <li>
                                        <form>
                                            @Html.DropDownList("selectedSalesPerson", new SelectList(Model.SalesPersons, "Id", "Value", Model.SalesMan), "---All Salesmen---", new { @class = "selectpicker", @style = "width:150px;" })
                                        </form>
                                    </li>

                                }
                                @if (!ViewBag.isSalesPerson)
                                {
                                    <li>
                                        <form>
                                            @Html.DropDownList("TagId", new SelectList(Model.Tags, "Id", "Value", Model.Tag), "---All Tags---", new { @class = "selectpicker", @style = "width:150px;" })
                                        </form>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div style="float: left;" class="btn-group clrchange">
                            <button type="submit" name="status" value="pending" class="btn btn-primary">
                                Action
                            </button>
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                @if (ViewBag.StatusId != 0 && ViewBag.StatusId != 3 && showBtn)
                                {

                                    using (Html.BeginForm("DeleteOrders", "Order", FormMethod.Post, new { id = "DeleteOrdersId", @style = "display:inline-block;" }))
                                    {
                                        @Html.Hidden("Ids", "", new { @id = "deleteAll" })
                                        <li>
                                            <input type="submit" onclick="return deleteAllOrders();" value="Delete" style="background: none repeat scroll 0 0 #424240; border-radius: 4px; color: #fff; font-weight: bold; margin: 2px; padding: 5px; border: 0 none; text-align: center;" />
                                        </li>
                                    }
                                    <li>
                                        <input type="button" value="Send Email" id="mailButton" style="background: none repeat scroll 0 0 #424240; border-radius: 4px; color: #fff; font-weight: bold; margin: 2px; padding: 5px; border: 0 none; text-align: center;" />
                                    </li>
                                    if (ViewBag.StatusId == 1 || ViewBag.StatusId == 4)
                                    {
                                        using (Html.BeginForm("MoveToWareHouse", "Order", FormMethod.Post, new { id = "WareHouseId", @style = "display:inline-block;" }))
                                        {
                                            @Html.Hidden("Ids", "", new { @id = "moveAll" })
                                            <li>
                                                <input type="submit" onclick="return moveAllOrders();" value="Move To Warehouse" style="background: none repeat scroll 0 0 #424240; border-radius: 4px; color: #fff; font-weight: bold; margin: 2px; padding: 5px; border: 0 none; text-align: center;" />
                                            </li>
                                        }
                                    }
                                    if (ViewBag.StatusId == 2)
                                    {
                                        <li>
                                            <input type="button" onclick="qshipAllOrders();" value="Quick Ship" style="background: none repeat scroll 0 0 #424240; border-radius: 4px; color: #fff; font-weight: bold; margin: 2px; padding: 5px; border: 0 none; text-align: center;" />
                                        </li>
                                    }
                                    if (ViewBag.StatusId == 6)
                                    {
                                        using (Html.BeginForm("Ship", "Order", FormMethod.Post, new { id = "ShipAllId", @style = "display:inline-block;" }))
                                        {
                                            @Html.Hidden("Ids", "", new { @id = "shipAll" })
                                            <li>
                                                <input type="submit" onclick="return shipAllOrders();" value="Ship" style="background: none repeat scroll 0 0 #424240; border-radius: 4px; color: #fff; font-weight: bold; margin: 2px; padding: 5px; border: 0 none; text-align: center;" />
                                            </li>
                                        }
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="allButton">

    <ul style="list-style: none; display: inline-block;">
        @foreach (var status in Model.Statuses)
        {
            <li class="@(status.IsSelected ? "selectedLi" : "orderLi")">
                @Html.ActionLink(status.Value, "Index", "Order", new { Id = status.Id, @selectedSalesPerson = Model.SalesMan.HasValue ? Model.SalesMan.Value : (int?)null, @searchText = !string.IsNullOrEmpty(Model.Search) ? Model.Search : null, @TagId = Model.Tag.HasValue ? Model.Tag.Value : (int?)null }, null)
            </li>
        }
    </ul>
    @if (!ViewBag.isWarehouse)
    {
        <div style="display: inline-block">
            Grand Total: @Math.Round(Model.GrandTotal).ToString("C2")
        </div>
    }

</div>
<script type="text/javascript">
    function submitOrdForm() {
        $("#orderHeaderForm").submit();
    }
    function clearSearch() {
        window.location = '@Url.Action("Index", "Order", new { Id = Model.Statuses.FirstOrDefault(x => x.IsSelected).Id })';
    }

    $('.dropdown-menu').on('click', function (event) {
        event.stopPropagation();
    });

    $('.selectpicker').selectpicker({
        container: 'body'
    });

    $('body').on('click', function (event) {
        var target = $(event.target);
        if (target.parents('.bootstrap-select').length) {
            event.stopPropagation();
            $('.bootstrap-select.open').removeClass('open');
        }
    });
</script>
