@model Platini.Models.EmployeeClass

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Common/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="errorMsgName" class="box_error" style="display: none;">
        <label id="errormsg"></label>
    </div>
    <div class="deshboardpanal">
        <div class="adminright_panal">
            <div class="nameheadingbg">
                <span class="sucmsghead">
                    <h1>Employee</h1>
                </span><span class="sucmsg"></span>
            </div>
            <div class="admincontent">
                <div class="registration">
                    @Html.ValidationSummary(true)
                    <div class="formRow">
                        <label for="contact_name" class="fieldLabel forwidth">
                            User Name <span class="forStar">*</span>
                        </label>
                        <div class="field">
                            @if (Model.EmployeeId > 0)
                            {
                                @:@Html.TextBoxFor(model => model.Username, new { @readonly = "True" })
                            }
                            else
                            {
                                @:@Html.TextBoxFor(model => model.Username)
                            }
                            @Html.ValidationMessageFor(model => model.Username)
                        </div>
                    </div>
                    <div class="formRow">
                        <label for="contact_name" class="fieldLabel forwidth">
                            Communication E-Mail <span class="forStar">*</span>
                        </label>
                        <div class="field">
                            @Html.TextBoxFor(model => model.Email)
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <div class="formRow">
                        <label for="contact_name" class="fieldLabel forwidth">
                            First Name <span class="forStar">*</span>
                        </label>
                        <div class="field">
                            @Html.TextBoxFor(model => model.FirstName)
                            @Html.ValidationMessageFor(model => model.FirstName)
                        </div>
                    </div>
                    <div class="formRow">
                        <label for="contact_name" class="fieldLabel forwidth">
                            Last Name <span class="forStar">*</span>
                        </label>
                        <div class="field">
                            @Html.TextBoxFor(model => model.LastName)
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>
                    </div>
                    <div class="formRow">
                        <label for="contact_name" class="fieldLabel forwidth">
                            Phone <span class="forStar">*</span>
                        </label>
                        <div class="field">
                            @Html.TextBoxFor(model => model.PhoneNo)
                            @Html.ValidationMessageFor(model => model.PhoneNo)
                        </div>
                    </div>
                    <div class="formRow">
                        <label for="contact_name" class="fieldLabel forwidth">
                            Password <span class="forStar">*</span>
                        </label>
                        <div class="field">
                            @Html.TextBoxFor(model => model.Password)
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>
                    <div class="formRow">
                        <label for="contact_name" class="fieldLabel forwidth">
                            Role <span class="forStar">*</span>
                        </label>
                        <div class="field">
                            @{ List<SelectListItem> roles = new List<SelectListItem>();
                               roles.Add(new SelectListItem { Text = "Admin", Value = "2" });
                               roles.Add(new SelectListItem { Text = "MasterAdmin", Value = "1" });
                               roles.Add(new SelectListItem { Text = "SalesPerson", Value = "4" });
                               roles.Add(new SelectListItem { Text = "Warehouse", Value = "3" });
                            }
                            @Html.DropDownListFor(x=>Model.RoleId, roles, new { @class="dropDown" })
                        </div>
                    </div>

                    <div class="formRow">
                        <label runat="server" class="fieldLabel" for="contact_name">
                            Active</label>

                        <div class="comn">
                            @if (Model == null)
                            {
                                <div class="comn2" style="width: 90px">
                                    @Html.RadioButtonFor(model => model.IsActive, "true", new { @checked = "checked" }) Yes
                                </div>
                                <div class="comn2" style="width: 90px">
                                    @Html.RadioButtonFor(model => model.IsActive, "false") No
                                </div>
                            }
                            else
                            {
                                <div class="comn2" style="width: 90px">
                                    @Html.RadioButtonFor(model => model.IsActive, "true") Yes
                                </div>
                                <div class="comn2" style="width: 90px">
                                    @Html.RadioButtonFor(model => model.IsActive, "false") No
                                </div>
                            }
                        </div>
                    </div>
                    <div class="formRow">
                        <label for="contact_name" class="fieldLabel forwidth">
                            &nbsp;</label>
                        <div class="field">
                            @Html.HiddenFor(model => model.EmployeeId)
                            <button id="updbtn" type="submit" class="save-btn" value="Save">Save</button>
                            <button id="cncbtn" type="button" class="save-btn" value="Cancel" onclick="window.location.href='@Url.Action("Index", "Employee")'">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}