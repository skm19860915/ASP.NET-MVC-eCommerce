@using MvcPaging;
@using Platini.Models;
@model IPagedList<Platini.Models.CustomerClass>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Common/Views/Shared/_Layout.cshtml";
}

<div class="col-md-8 col-lg-8 col-sm-8">
        @using (Html.BeginForm((ViewBag.isWH ? "InactiveWholeSeller" : "InactiveCustomer"), "Customer", new { area = "Common" }, FormMethod.Post))
        {         
            <div class="filter-block">
                <div class="formblock">
                    <div class="block">
                        <div class="formrow">
                            Search 
                        </div>
                        <div class="formrow">
                            <div class="feild">
                                @Html.TextBox("searchString")
                            </div>
                        </div>

                        <div class="formrow">
                            <div class="feild">
                                <input id="searchBtn" class="cobtn" value="GO" type="submit" style="height: 22px;" onclick="@Url.Action((ViewBag.isWH ? "InactiveWholeSeller" : "InactiveCustomer"), "Customer")" />
                                <span style="float: left;">&nbsp;&nbsp;</span><input id="clearSearchBtn" class="cobtn" value="Clear" type="button" style="height: 22px;" onclick="ClearSearch();" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>    
        }
    </div>
<div class="col-md-4 col-lg-4 col-sm-4">
    <div class="navigationlist">
        <ul>
            @if (Platini.Models.SiteConfiguration.Mode == Platini.Models.ModeEnum.Edit.ToString())
            {
                <li>
                    <a onclick="javascript:activateCustomerIds();">Activate</a>
                </li>
            }
            <li>
                <a href="@Url.Action("Index", "Customer")">Back</a>
            </li>
        </ul>
    </div>
</div>

<div class="col-md-12 col-lg-12 col-sm-12">

    <div class="minContainer">
        <div class="listmanager">
            <div class="head">
                @(ViewBag.isWH ? "Inactive WholeSeller" : "Inactive Customer") List
            </div>
            <div class="main-listing-box">
                <table style="border: 0; width: 100%">
                    <tr class="title-pannel">
                        <td>@Html.CheckBox("masterCheckBox", new { onchange = "javascript:masterCheckBoxFunc();" })</td>
                        <td >User Name</td>
                        <td >Name</td>
                        <td >Email</td>
                        <td >Display Name</td>
                        <td >Address</td>
                        <td >Phone No</td>
                        <td >Actions</td>
                    </tr>

                    @foreach (var item in Model)
                    {                       
                        <tr>
                            <td>
                                @Html.CheckBox("customerCheckBox", new { id = item.AccountId })
                                @Html.HiddenFor(x => item.AccountId)
                            </td>
                            <td >
                                <a href="@Url.Action("Edit", "Customer", new { Id = item.AccountId, @fromInactiveCustomerPage = "true" })">@Html.DisplayFor(x => item.Username)</a>
                            </td>
                            <td >
                                @Html.DisplayFor(x => item.FirstName) @Html.DisplayFor(x => item.LastName)
                            </td>
                            <td >
                                @Html.DisplayFor(x => item.Email)
                            </td>
                            <td >
                                @item.DisplayName
                            </td>
                            <td >
                                @item.City @item.State
                            </td>
                            <td >
                                @Html.DisplayFor(x => item.PhoneNo)
                            </td>
                            <td >
                                @if (Platini.Models.SiteConfiguration.Mode == Platini.Models.ModeEnum.Edit.ToString())
                                {
                                    <a href="@Url.Action("Delete", "Customer", new { Id = item.AccountId })" onclick = "return confirm('Are you sure you wish to delete this item?');">Delete</a>
                                }
                            </td>
                        </tr>
                    }

                </table>
                <div class="pagingContainer"></div>

                @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount, new { @sortOrder = ViewBag.currentOrderParam, @sortColumn = ViewBag.sortColumnParam, searchString = ViewBag.searchStringParam })
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function ClearSearch() {
        window.location = window.location.href;
    }
    var activateCustomerIds = function () {
        var selectedCustomerIds = new Array();

        $("input:checkbox[name=customerCheckBox]:checked").each(function () {
            var id = $(this).attr('id');
            selectedCustomerIds.push(id);
        });
        $.ajax({
            type: "POST",
            traditional: true,
            async: false,
            url: "@(Url.Action("Activate", "Customer"))",
            data: { "selectedCustomerIds": selectedCustomerIds },
            success: function () {
                $("input:checkbox[name=customerCheckBox]:checked").each(function () {
                    $(this).prop('checked', false);
                });
                alert('Successfully Saved');
                $("#masterCheckBox").prop('checked', false);
            },
            error: function () { alert('An error occured while saving.') }
        });
        location.reload();
    }

    var masterCheckBoxFunc = function () {
        var checked = $("#masterCheckBox").is(':checked');
        if (checked == true) {
            $("input:checkbox[name=customerCheckBox]").each(function () {
                var id = $(this).prop('checked', true);
            });
        }
        else if (checked == false) {
            $("input:checkbox[name=customerCheckBox]").each(function () {
                var id = $(this).prop('checked', false);
            });
        }
    }
</script>

