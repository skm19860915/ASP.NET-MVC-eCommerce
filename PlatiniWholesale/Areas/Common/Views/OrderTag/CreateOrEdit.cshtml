@model Platini.Models.TagClass

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Common/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="errorMsgName" class="box_error" style="display: none;">
        <label id="errormsg"></label>
    </div>
    <div class="deshboardpanal">
        <div class="adminright_panal">
            <div class="nameheadingbg">
                <span class="sucmsghead">
                    <h1>Tag</h1>
                </span><span class="sucmsg"></span>
            </div>
            <div class="admincontent">
                <div class="registration">
                    @Html.ValidationSummary(true)
                    <div class="formRow">
                        <label for="contact_name" class="fieldLabel forwidth">
                            Name <span class="forStar">*</span>
                        </label>
                        <div class="field">
                            @Html.HiddenFor(model => model.OrderTagId)
                            @Html.HiddenFor(model => model.IsDefault)
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)

                        </div>
                    </div>
                    <div class="formRow">
                        <label for="contact_name" class="fieldLabel forwidth">
                            Sort Order <span class="forStar">*</span>
                        </label>
                        <div class="field">
                            @Html.EditorFor(model => model.SortOrder)
                            @Html.ValidationMessageFor(model => model.SortOrder)

                        </div>
                    </div>
                    <div class="formRow">
                        <label runat="server" class="fieldLabel" for="contact_name">
                            Active</label>

                        <div class="comn">
                            @if (Model == null)
                            {
                                <div class="comn2" style="width: 90px">
                                    @Html.RadioButtonFor(model => model.IsActive, "true", new { @checked = "checked" }) Yes
                                </div>
                                <div class="comn2" style="width: 90px">
                                    @Html.RadioButtonFor(model => model.IsActive, "false") No
                                </div>
                            }
                            else if (Model.IsDefault.HasValue ? Model.IsDefault.Value : false)
                            {
                                <div class="comn2" style="width: 90px">
                                    @Html.RadioButtonFor(model => model.IsActive, "true", new { @checked = "checked", @disabled = "disabled" }) Yes
                                </div>
                                <div class="comn2" style="width: 90px">
                                    @Html.RadioButtonFor(model => model.IsActive, "false", new { @disabled = "disabled" }) No
                                </div>
                                @Html.HiddenFor(model => model.IsActive)
                            }
                            else
                            {
                                <div class="comn2" style="width: 90px">
                                    @Html.RadioButtonFor(model => model.IsActive, "true", new { @checked = "checked", @disabled = "disabled" }) Yes
                                </div>
                                <div class="comn2" style="width: 90px">
                                    @Html.RadioButtonFor(model => model.IsActive, "false", new { @disabled = "disabled" }) No
                                </div>
                            }
                        </div>
                    </div>
                    <div class="formRow">
                        <label for="contact_name" class="fieldLabel forwidth">
                            &nbsp;</label>
                        <div class="field">
                            <button id="updbtn" type="submit" class="save-btn" value="Save">Save</button>
                            <button id="cncbtn" type="button" class="save-btn" value="Cancel" onclick="window.location.href='@Url.Action("Index", "OrderTag")'">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}