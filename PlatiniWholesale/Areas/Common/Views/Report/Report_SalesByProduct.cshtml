    <table>
        <tr>
            <td colspan="5">Select Products/Service Name</td>
        </tr>
        <tr>
            <td colspan="5">Select from List:
            </td>
        </tr>
        <tr>
            <td>@Html.ListBox("SelectionList1", new SelectList(Model.Products, "Id", "StyleNumber"), new { @name = "SelectionList1", @size = "10", @class = "list1" })
