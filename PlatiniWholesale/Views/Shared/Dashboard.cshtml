@using Platini.Models;
@model DashBoard
@if (Model.showDashboard)
{
    <style>
        .lefFixMenu {
            margin-left: 2%;
            padding: 30px;
            width: 250px;
        }

        .nav-left-table {
            width: 250px;
            border-radius: 8px;
            border: 1px solid #999999;
            overflow: hidden;
        }

            .nav-left-table table {
                width: 100%;
                border-collapse: collapse;
            }

            .nav-left-table tr td {
                padding: 5px 5px 5px 5px;
                text-align: right;
                background: #fff;
                font-family: Arial, Helvetica, sans-serif;
                color: #000;
                font-size: 14px;
            }

                .nav-left-table tr td:first-child {
                    text-align: left;
                }

            .nav-left-table table tr:hover {
                background: #ccc;
            }

            .nav-left-table table tr {
                border-top: 1px solid #999999;
            }

                .nav-left-table table tr:first-child {
                    border-top: 0 none;
                }

                    .nav-left-table table tr:first-child td {
                        text-align: left;
                        background: #FFDA3F;
                        color: #000;
                        font-size: 16px;
                        font-family: Arial, Helvetica, sans-serif;
                        font-weight: 600;
                        padding: 3px 5px;
                        border-top: 0;
                    }

        ul.lenav {
            padding-left: 0;
            margin-left: 0;
            list-style: none;
            width: 250px;
        }

            ul.lenav li {
                margin: 9px 0;
            }

                ul.lenav li a {
                    background: #CC3028;
                    padding: 2px 10px 8px 10px;
                    display: block;
                    border-radius: 5px;
                    color: #fff;
                    text-decoration: none;
                    font-size: 15px;
                    font-family: Arial, Helvetica, sans-serif;
                }

                    ul.lenav li a img {
                        top: 6px;
                        padding-right: 5px;
                    }

                    ul.lenav li a:hover {
                        background: #be221a;
                        text-decoration: none;
                    }

                ul.lenav li span.topPad {
                    padding-top: 4px;
                    display: inline-block;
                    font-weight: normal;
                }
    </style>
    <div class="lefFixMenu">

        <div class="nav-left-table">
            <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                    <td colspan="2">Statistics for last 24 hours</td>
                </tr>
                <tr>
                    <td>
                        @if (Model.uCount > 0)
                        {
                            <a style="color:#000;display:block;text-decoration:none;" href="@Url.Action("OnlineNow", "Home", new { @area = "Common" })">Online Customers</a>
                        }
                        else
                        {
                            @:Online Customers
                        }</td>
                    <td>
                        @if (Model.uCount > 0)
                        {
                            <a style="color:#000;display:block;text-decoration:none;" href="@Url.Action("OnlineNow", "Home", new { @area = "Common" })">@Model.uCount</a>
                        }
                        else
                        {
                            @Model.uCount
                        }
                    </td>
                </tr>
                <tr>
                    <td>
                        @if (Model.iCount > 0)
                        {
                            <a style="color:#000;display:block;text-decoration:none;" href="@Url.Action("InactiveWholeSeller", "Customer", new { @area = "Common" })">Pending Activation</a>
                        }
                        else
                        {
                            @:Pending Activation
                        }</td>
                    <td>
                        @if (Model.iCount > 0)
                        {
                            <a style="color:#000;display:block;text-decoration:none;" href="@Url.Action("InactiveWholeSeller", "Customer", new { @area = "Common" })">@Model.iCount</a>
                        }
                        else
                        {
                            @Model.iCount
                        }
                    </td>
                </tr>
                <tr>
                     <td>
                        @if (Model.vCount > 0)
                        {
                            <a style="color:#000;display:block;text-decoration:none;" href="@Url.Action("Visitors", "Home", new { @area = "Common" })">Visitors</a>
                        }
                        else
                        {
                            @:Visitors
                        }</td>
                    <td>
                        @if (Model.vCount > 0)
                        {
                            <a style="color:#000;display:block;text-decoration:none;" href="@Url.Action("Visitors", "Home", new { @area = "Common" })">@Model.vCount</a>
                        }
                        else
                        {
                            @Model.vCount
                        }
                    </td>
                </tr>
                @if (Model.showDollar)
                {
                    <tr>
                        <td>
                            @if (Model.TotAmt > 0)
                            {
                                <a style="color:#000;display:block;text-decoration:none;" href="@Url.Action("Index", "Order", new { @area = "Common",@id=(int)OrderMode.Shipped })">Order Amount</a>
                            }
                            else
                            {
                                @:Order Amount
                            }
                        </td>
                        <td>
                            @if (Model.TotAmt > 0)
                            {
                                <a style="color:#000;display:block;text-decoration:none;" href="@Url.Action("Index", "Order", new { @area = "Common",@id=(int)OrderMode.Shipped })">$ @Model.TotAmt</a>
                            }
                            else
                            {
                                @("$" + Model.TotAmt)
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @if (Model.OrdCount > 0)
                            {
                                <a style="color:#000;display:block;text-decoration:none;" href="@Url.Action("Index", "Order", new { @area = "Common",@id=(int)OrderMode.Shipped })">Orders Shipped</a>
                            }
                            else
                            {
                                @:Orders Shipped
                            }
                        </td>
                        <td>
                            @if (Model.OrdCount > 0)
                            {
                                <a style="color:#000;display:block;text-decoration:none;" href="@Url.Action("Index", "Order", new { @area = "Common",@id=(int)OrderMode.Shipped })">@Model.OrdCount</a>
                            }
                            else
                            {
                                @Model.OrdCount
                            }
                        </td>
                    </tr>
                }

            </table>
        </div>

        <ul class="lenav">
            <li><a href="@Url.Action("Create", "Customer", new { @area = "Common" })"><span>
                <img src="@Url.Content("~/Styles/images/new-cus.png")" alt=""></span> <span class="topPad">Add customer</span></a></li>
            <li><a href="@Url.Action("Index", "Order", new { @area = "Common" })"><span>
                <img src="@Url.Content("~/Styles/images/orders.png")" alt=""></span><span class="topPad"> Orders page</span></a></li>
            <li><a href="@Url.Action("MassUpload", "Clothes", new { @area = "Common" })"><span>
                <img src="@Url.Content("~/Styles/images/adPro.png")" alt=""></span><span class="topPad"> Add products page</span></a></li>
            <li><a href="@Url.Action("Index", "Customer", new { @area = "Common" })"><span>
                <img src="@Url.Content("~/Styles/images/cutpa.png")" alt=""></span> <span class="topPad">Customers Page</span></a></li>
        </ul>
    </div>
}