@using Platini.Models;
@model Cart
<script type="text/javascript" src="~/Scripts/elements.js"></script>


<div class="fullheight" style="overflow:scroll !important;">
    @using (Html.BeginForm("Cart", "Home", FormMethod.Post, new { id = "cartForm" }))
    {
