@{
    ViewBag.Title = "ForgotPassword";
}
<script type="text/javascript" src="~/Scripts/jquery-1.7.1.min.js"></script>
<style type="text/css">

    .page-title1 {
        background: linear-gradient(to bottom, rgba(238, 238, 238, 1) 0%, rgba(204, 204, 204, 1) 100%) repeat scroll 0 0 rgba(0, 0, 0, 0);
        font-size: 15px;
        height: 45px;
        text-align: left;
        width: 810px;
        margin-left: 300px;
        margin-top: 95px;
    }

        .page-title1 h3 {
            font-size: 16px;
            font-weight: bold;
        }

    .marginT {
        margin-top: 20px;
    }

     .txtbox {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 5px 3px;
        width: 330px;
    }
     .save-btn {
    background-color: #252523 !important;
    border: 1px solid #D6CBAF;
    border-radius: 5px 5px 5px 5px;
    margin-right: 5px;
    padding: 8px;
    width: 60px;
    color: #FFFFFF !important;
    text-decoration: none;
    cursor: pointer;
}

    .save-btn :hover {
        text-decoration: none;
    }

</style>
<script type="text/javascript">
    $(function () {
        $("#btnSubmit").click(function () {
            var email = $("#txtEmail").val();
            var pattern = new RegExp(/^((([a-z]|\d|[!#\$%&'\*\+\-\/=\?\^_`{\|}~]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])+(\.([a-z]|\d|[!#\$%&'\*\+\-\/=\?\^_`{\|}~]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])+)*)|((\x22)((((\x20|\x09)*(\x0d\x0a))?(\x20|\x09)+)?(([\x01-\x08\x0b\x0c\x0e-\x1f\x7f]|\x21|[\x23-\x5b]|[\x5d-\x7e]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(\\([\x01-\x09\x0b\x0c\x0d-\x7f]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]))))*(((\x20|\x09)*(\x0d\x0a))?(\x20|\x09)+)?(\x22)))@@((([a-z]|\d|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(([a-z]|\d|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])*([a-z]|\d|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])))\.)+(([a-z]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(([a-z]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])*([a-z]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])))\.?$/i);
            if(pattern.test(email))
            {
                $.ajax({
                    type: "GET",
                    traditional:true,
                    url: "@Url.Action("SubmitEmail", "Home", new { area=""})",
                    data: { email: email },
                    success: function (result) {
                        if (result.Response == "Success") {
                            alert('Your password has been emailed to the address on file.');
                            window.location.href = "@Url.Action("Login", "Home", new { area=""})";
                        }
                        else {
                            alert('We could not find the email address in our system.');
                        }
                    },
                    error: function () {
                    }
                });
            }
            else
            {
                alert('Please enter a valid email address.');
            }
        });

    });
</script>
<div class="page-title1 nameheadingbg" style="border: 1px solid #ccc;width: 60%; margin: 0px auto; padding-left: 20px;">
    <h3>Forgot Password</h3>
</div>
<div class="wrapper marginT">
    <div style="width: 60%;margin: 0px auto;padding: 7px;padding-left: 20px;border: 1px solid #ccc;border-radius: 5px;">
        What is your email ? <br />
        <input type="text" class="txtbox" id="txtEmail" value="" />
        <input type="submit" class="save-btn" id="btnSubmit" value=" Send " />

    </div>
</div>