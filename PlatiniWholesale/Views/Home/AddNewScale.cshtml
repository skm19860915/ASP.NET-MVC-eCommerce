@model Platini.Models.ClothesScaleClass

<div class="row" style="vertical-align: top; text-align: left; margin-top: 8px; background: none repeat scroll 0 0 #bdbdbd; color: #000; border: 1px dotted; width: 100%; padding: 5px; margin-left: 6px;">
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
        Scale
        <div>
            @Html.TextBoxFor(x => Model.Name, new { style = "width:100%;border: inset 1px black;border-radius:4px;", @class = "scaleText",@onfocus="this.select();",@onmouseup="return false;" })
        </div>
    </div>
    @if (Model.selectedFitId != 0)
    { <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
        Fits
        <div>
            @Html.DropDownListFor(x => Model.FitId, new SelectList(Model.FitList, "Id", "Value"), null, new { @class = "dropDown", style = "width:100%;height:30px;" })
        </div>
    </div> }
    else
    {
        @Html.HiddenFor(x => Model.FitId)
    
    }
    @if (Model.selectedInseamId != 0)
    { <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
        Inseam
        <div>
            @Html.DropDownListFor(x => Model.InseamId, new SelectList(Model.InseamList, "Id", "Value"), null, new { @class = "dropDown", style = "width:100%;height:30px;" })
        </div>
    </div>}
    else
    {
        @Html.HiddenFor(x => Model.InseamId)
    }
    @for (var j = 0; j < Model.ClothesScaleSizeClass.Count(); j++)
    {
        <div style="float: left; text-align: center; padding: 0 5px;">
            @Model.ClothesScaleSizeClass[j].SizeName
            <div>
                @Html.TextBoxFor(x => Model.ClothesScaleSizeClass[j].Quantity, new { @class = "scaleText effect checkMe", @style = "background:#fff",@onfocus="this.select();",@onmouseup="return false;" })
            </div>
        </div>     
        @Html.HiddenFor(x => Model.ClothesScaleSizeClass[j].SizeId)
        @Html.HiddenFor(x => Model.ClothesScaleSizeClass[j].ClothesScaleId)
        @Html.HiddenFor(x => Model.ClothesScaleSizeClass[j].ClothesScaleSizeId)
    }
    @Html.HiddenFor(x => Model.ClothesId)
    @Html.HiddenFor(x => Model.ClothesScaleId)

    @Html.HiddenFor(x => Model.IsOpenSize)
    <div style="float: left; text-align: center; padding: 0 5px;">
        Inv Qty
        <div>@Html.TextBoxFor(x => Model.InvQty, new { @class = "scaleText effect", @style = "background:#fff",@onfocus="this.select();",@onmouseup="return false;" })</div>
    </div>
    <div style="float: left; text-align: center; padding-top: 1em;">
        <button type="button" onclick="cancelScale(this);" class="blackBtn lineSheetEditBtn">Cancel</button>
    </div>
    <div class="scalediv"></div>
</div>

<script type="text/javascript">
    function cancelScale(elm) {
        $(elm).parent().parent().remove();
    }
    $(".checkMe").change(function () {
        var name = $(this).attr('name');
        var parts = name.split('.');
        if ($("input[name='" + parts[0] + ".isSelected']").length != 0)
            $("input[name='" + parts[0] + ".isSelected']").prop('checked', true);

    });
</script>
